@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="todoApp">
<head>
	<title>TO DO List</title>
	<link href="@Url.Content("~/bootstrap/bootstrap.min.css")" rel="stylesheet"/>
	<link href="@Url.Content("~/bootstrap/bootstrap-theme.min.css")" rel="stylesheet"/>
    <script src="@Url.Content("~/angularJs/angular.min.js")"></script>
	<script>
	    var model = {
	        user: "Somebody",
	        items: [{ action: "Action #1", done: false },
				   { action: "Action #2", done: false },
				   { action: "Action #3", done: true },
				   { action: "Action #4", done: false}]
	    };

	    var todoApp = angular.module("todoApp", []);

	    todoApp.filter("checkedItems", function () {
	        return function (items, showComplete) {
	            var resultArr = [];
	            angular.forEach(items, function (item) {
	                if (item.done == false || showComplete == true) {
	                    resultArr.push(item);
	                }
	            });
	            return resultArr;
	        }
	    });
	    // End todoApp.filter

    
	    todoApp.controller("ToDoCtrl", function ($scope) {
	        $scope.todo = model;

	        $scope.incompleteCount = function () {
	            var count = 0;
	            angular.forEach($scope.todo.items, function (item) {
	                if (!item.done) { count++; }
	            });
	            return count;
	        }
	        // End $scope.incompleteCount

	        $scope.warningLevel = function () {
	            return $scope.incompleteCount() < 3 ? "label-success" : "label-warning";
	        }
	        // End $scope.warningLevel

	        $scope.addNewItem = function (actionText) {
	            $scope.todo.items.push({ action: actionText, done: false });
	        }
	        // End $scope.addNewItem

	    });
	</script>
</html>
<body ng-controller="ToDoCtrl">
	<div class="page-header">
		<h2>
            {{todo.user}}'s To Do List 
            <span class="label label-default" ng-class="warningLevel()" ng-hide="incompleteCount() == 0">
                {{incompleteCount()}}
            </span>
        </h2>
	</div>
	
	<div class="panel">
		<div class="input-group">
			<input class="form-control" ng-model="actionText"/>
			<span class="input-group-btn">
				<button class="btn btn-default"
                        ng-click="addNewItem(actionText)">Add</button>
			</span>
		</div>
		
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Description</th>
					<th>Done</th>
                    <th></th>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="item in todo.items | checkedItems:showComplete | orderBy:'action'">
					<td>{{item.action}}</td>
                    <td><input type="checkbox" ng-model="item.done" /></td>
					<td>{{item.done}}</td>
				</tr>
			</tbody>
		</table>

        <div class="checkbox-inline">
            <label><input type="checkbox" ng_model="showComplete" />Show Complete</label>
        </div>
	</div>
</body>
</html>

